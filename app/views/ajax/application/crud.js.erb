<% if obj.errors.any? %>
  <% obj.errors.each do |a, m| %>
    Materialize.toast("<%= a.to_s.humanize %> <%= m %>", 5000, 'rounded red');
  <% end %>
<% else %>
  Materialize.toast("<%= notice %>", 5000, 'rounded orange darken-3');
  <% case acao %>
  <% when 'create' %>
    <%= render file: 'ajax/comprovantes/incluir.js.erb', locals: { obj: obj } %>
  <% when 'update' %>
    <%= render file: 'ajax/comprovantes/alterar.js.erb', locals: { obj: obj } %>
  <% when 'destroy' %>
    <%= render file: 'ajax/comprovantes/excluir.js.erb', locals: { obj: obj } %>
  <% else %>
    alert('erro');
  <% end %>
<% end %>
