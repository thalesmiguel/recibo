<div class="row">

  <%= form_for imagem, html: {class: "col s12"} do |f| %>
    <div class="row">

      <% if imagem.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(imagem.errors.count, "error") %> prohibited this imagem from being saved:</h2>
          <ul>
            <% imagem.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="input-field col s5">
        <%= f.text_field :nome %>
        <%= f.label :nome, class: 'active' %>
      </div>
      <div class="file-field input-field col s5">
        <div class="btn">
          <span>Arquivo</span>
          <%= f.file_field :arquivo %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div class="col s2 p-t-20">
        <%= button_tag "Salvar", class:"btn waves-effect waves-light" %>

        <% if !imagem.new_record? %>
          <%= link_to "Excluir", imagem_path(imagem), method: 'delete', class: 'btn red darken-3 waves-effect waves-light', remote:true,
                data: { confirm: t('.confirm', :default => t("helpers.links.confirm", default: 'Confirmar a exclusÃ£o?')) } %>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
